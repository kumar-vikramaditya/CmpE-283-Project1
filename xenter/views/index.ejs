<!DOCTYPE html>
<html>
<head>
<title>Team 16</title>

<meta charset="utf-8" />
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<link rel="stylesheet" type="text/css" href="css/styleboot.css" />
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">


</head>

<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-md-4 col-md-offset-4">
				<h1 class="text-center login-title">Sign in to continue to
					Team 16- Private Cloud</h1>
				<div class="account-wall">
					<img class="profile-img"
						src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
						alt="">
					<div id="loginForm" class="form-signin">
						<input id="user" type="text" class="form-control"
							placeholder="Username" required autofocus> <input
							id="pwd" type="password" class="form-control"
							placeholder="Password" required>
						<button class="btn btn-lg btn-primary btn-block"
							onclick="validate()">Sign in</button>
						<label class="checkbox pull-left"> <input type="checkbox"
							value="remember-me"> Remember me
						</label> <a href="#" class="pull-right need-help">Need help? </a><span
							class="clearfix"></span>
						<div id="unsuccessful"></div>
					</div>
				</div>
				<a href="reg.html" class="text-center new-account">Create an
					account </a>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		var count = 2;
		function validate() {
			var un = document.getElementById("user").value;
			var pw = document.getElementById("pwd").value;
			var valid = false;
			
			$.post("/profile/login", {email:un,password:pw}).done(function(data) {
				//alert(data);
				
				var d = data;
				console.log(d);
				//alert(d.status);
				if (d.status=="success") {
					console.log("Login successful");
					window.location = "/dashboard"
					//window.open("dashboard.html", "_blank");
				} else {
					document.getElementById("unsuccessful").innerHTML = "The Username or the Password is incorrect.";
					return false;
					//alert("Login Unsuccessful");
				}
				
			});
			
			
		}
	</script>
    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>

</body>
</html>
